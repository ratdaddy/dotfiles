alias tmux='tmux -2'

alias cbcopy='xclip -selection clipboard'
alias cbpaste='xclip -o -selection clipboard'

alias respec="xclip -o | awk '{ print \$2 }' | sed s/:in// | xargs bundle exec rspec"

alias gb='git config --get remote.origin.url | ruby -ne "puts %{https://github.com/#{\$_.split(/.com[\:\/]/)[-1].gsub(%{.git},%{})}}"| xargs open'

#if [ $(uname -s) == "Darwin" ]; then
  #alias vi=vim
#fi

alias vif='vim $(fzf)'
